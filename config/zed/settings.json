{
  // AGENT
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-5.2",
    },
    "default_model": {
      "provider": "openai",
      "model": "gpt-5.2",
    },
    "model_parameters": [],
  },
  // MCP
  "context_servers": {
    "jira": {
      "enabled": true,
      "command": "/opt/bin/jira-mcp",
      "args": [],
      "env": {},
    },
  },
  // APPEARANCE
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Material Icon Theme",
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark",
  },
  "gutter": {
    "line_numbers": true,
    "breakpoints": false,
    "folds": true,
    "min_line_number_digits": 0,
    "runnables": true,
  },
  "title_bar": {
    "show_sign_in": false,
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
  },
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "buffer_font_weight": 400,
  "buffer_font_family": "Fira Code",
  "buffer_line_height": "standard",
  "current_line_highlight": "none",
  "cursor_blink": true,
  "confirm_quit": false,
  "terminal": {
    "cursor_shape": "bar",
    "alternate_scroll": "off",
    "blinking": "off",
    "font_family": "Fira Code",
    "copy_on_select": false,
    "button": false,
    "working_directory": "current_project_directory",
    "detect_venv": "off",
  },
  // FILES CONFIG
  "file_scan_exclusions": [
    "**/*.git",
    "**/*.venv",
    "**/__pycache__",
    "**/*.python-version",
    "**/*uv.lock",
    "**/*dist",
    "**/*target",
    "**/*.nuxt",
    "**/*.output",
  ],
  "file_types": {
    "XML": ["poml"],
  },
  // LANGUAGES CONFIG
  "languages": {
    "Markdown": {
      "completions": {
        "lsp": false,
        "words": "disabled",
      },
    },
    "Python": {
      "language_servers": ["ty", "!basedpyright"],
    },
    "XML": {
      "preferred_line_length": 999,
      "format_on_save": "off",
      "show_completions_on_input": false,
    },
    "Plain Text": {
      "show_completions_on_input": false,
    },
  },
  // OTHERS
  "outline_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "project_panel": {
    "button": true,
  },
  "search": {
    "button": false,
  },
  "diagnostics": {
    "button": false,
  },
  "scrollbar": {
    "axes": {
      "horizontal": false,
      "vertical": true,
    },
  },
  "features": {
    "edit_prediction_provider": "none",
  },
  // JAVA
  // $ rm -r ~/.cache/jdtls-* // to fix broken jdtls
  // lombok: ~/.local/share/zed/extensions/work/java/lombok/lombok-<versÃ£o>.jar
  "lsp": {
    "jdtls": {
      "settings": {
        "java_home": "/opt/corretto-21",
        "lombok_support": true,
        "jdk_auto_download": false,
        "check_updates": "always",
      },
    },
  },
}
