{
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "hideTips": true,
    "hideBanner": true,
    "footer": {
      "hideCWD": true,
      "hideSandboxStatus": true,
      "hideModelInfo": true
    },
    "accessibility": {
      "disableLoadingPhrases": true
    }
  },
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--viewport=1920x1080"
      ],
      "trust": true
    }
  }
}
